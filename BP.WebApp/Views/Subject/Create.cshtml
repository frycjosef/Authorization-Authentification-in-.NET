@model BP.Common.Data.Entities.Subject
@{
    ViewBag.Title = "Create New Subject";
}

<h1>Create New Subject</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Subject" asp-action="CreateSubject" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-2">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter subject name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter subject description" rows="5" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" @(PermissionHelper.HasPermission("CreateSubjects.*", ViewContext.HttpContext) ? "" : "disabled")>Save Subject</button>
        </form>
    </div>
</div>